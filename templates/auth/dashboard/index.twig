{% extends 'auth/layout.twig' %}
{% block title %}Login{% endblock %}
{% block content %}
    <h1><span>Utnificar alesad</span></h1>
    <form action="{{ absolute_url('authenticate') }}" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="email">E-Mail</label>
            <input type="email" class="form-control" required name="email" id="email">
        </div>
        <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="password" class="form-control" required name="password" id="password">
        </div>
        <div class="checkbox">
            <label><input type="checkbox"> Recordarme</label>
        </div>
        <input class="login-btn btn-block" type="submit" value="Iniciar sesión">
    </form>

    <div class="panel-help">
        <p><a href="{{ absolute_url('forgot') }}">¿Olvidaste la contraseña?</a></p>
        <p><a href="{{ absolute_url('register') }}">Registrarme!</a></p>
    </div>
{% endblock %}
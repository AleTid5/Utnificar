{% extends 'non-auth/layout.twig' %}
{% block title %}Login{% endblock %}
{% block content %}
    <h1>Registrarme</h1>

    <form action="{{ absolute_url('signup') }}" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="email">E-Mail</label>
            <input type="email" class="form-control" required name="email" id="email">
        </div>
        <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="password" class="form-control" required name="password" id="password">
        </div>
        <div class="form-group">
            <label for="confirm-password">Confirmar contraseña</label>
            <input type="password" class="form-control" required name="confirm-password" id="confirm-password">
        </div>
        <input class="login-btn btn-block" type="submit" value="Crear cuenta">
    </form>

    <div class="panel-help">
        <p><a href="{{ absolute_url('/') }}">Volver</a></p>
    </div>
{% endblock %}
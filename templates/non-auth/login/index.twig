{% extends 'non-auth/layout.twig' %}
{% block title %}Login{% endblock %}
{% block content %}
    <h1><span>Utnificar</span></h1>

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey | trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="form-group">
            <label for="email">E-Mail</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
        </div>
        <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Contraseña" required>
        </div>
        <div class="checkbox">
            <label><input type="checkbox" id="remember_me" name="_remember_me" checked />Recordarme</label>
        </div>
        <input class="login-btn btn-block" type="submit" value="Iniciar sesión">
    </form>

    <div class="panel-help">
        <p><a href="{{ absolute_url('forgot') }}">¿Olvidaste la contraseña?</a></p>
        <p><a href="{{ absolute_url('register') }}">Registrarme!</a></p>
    </div>
{% endblock %}